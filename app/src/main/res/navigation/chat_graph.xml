<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_graph"
    app:startDestination="@id/user">

    <fragment
        android:id="@+id/user"
        android:name="com.SE114PMCL.chatMessenger.User"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" >
        <action
            android:id="@+id/action_user_to_messenger"
            app:destination="@id/messenger"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/messenger"
        android:name="com.SE114PMCL.chatMessenger.Messenger"
        android:label="fragment_messenger"
        tools:layout="@layout/fragment_messenger" />
</navigation>