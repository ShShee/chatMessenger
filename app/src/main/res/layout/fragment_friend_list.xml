<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Main.ContactTab.FriendList">
    <include
        android:id="@+id/toolbarFriend"
        layout="@layout/tlbrfriends"/>
    <EditText
        android:id="@+id/searchFriend"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:layout_below="@+id/toolbarFriend"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="126dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchFriend"
        android:layout_marginTop="-3dp"

        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/friend_view" />

</RelativeLayout>